<!doctype html>
<html>

<head>
  <title>Talk that talk</title>
  <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css">
  <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.5.0/css/all.css" integrity="sha384-B4dIYHKNBt8Bc12p+WXckhzcICo0wtJAoU8YZTY5qE0Id1GSseTk6S+L3BlXeVIU" crossorigin="anonymous">
  <link rel="stylesheet" href="style3.css">
</head>

<body>
  <div class="container">

    <div class="page-header text-center">
      <h1><span class="fa fa-anchor"></span>Profile Page</h1>
      <a href="/logout" class="btn btn-default btn-sm">Logout</a>
    </div>

    <div class="row">

      <!-- LOCAL INFORMATION -->

        </div>
      </div>
      <div class="col-sm-6 order">
        <h3>Talk that talk</h3>
        <form method="POST">
          <input type="text" name="cust" value="" placeholder="Customer">
          <input type="text" name="order" value="" placeholder="Order">
          <input type="submit" name="" value="SUBMIT">
        </form>
        <ul class="messages">
          <% for(var i=0; i<messages.length; i++) {%>
          <% if(messages[i].complete == false) {%>
          <li class="message">
            <span><%= messages[i].name %></span>
            <span><%= messages[i].msg %></span>
            <span><i class="fa fa-thumbs-up" aria-hidden="true"></i></span>
          </li>
          <% } %>
          <% } %>
        </ul>


      </div>

      <div class="col-sm-6 complete">
        <h4>Completed <button class="clear" type="button" name="button">Clear</button></h4>

        <ul class="messages">
          <% for(var i=0; i<messages.length; i++) {%>
          <% if(messages[i].complete == true) {%>
          <% if (user.local.email) { %>
          <li class="message">
            <span class="compOrd"><%= messages[i].name %></span>
            <span class="compOrd"><%= messages[i].msg %></span>
            <span class="barista">Made By:</span>
            <span class="barista"><%= user.local.email %></span>
          </li>
          <% } %>
          <% } %>
          <% } %>
        </body>
        </html>
